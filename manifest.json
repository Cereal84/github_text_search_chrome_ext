{
    "manifest_version": 2,

    "name": "GitHub Text Search",
    "short_name":"GH Text",
    "description": "Add a search text bar on current GitHub repo page.",
	"author": "Alessandro Pischedda",

    "version": "0.9.4",

	"icons" : {
		"16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
	},

    "content_scripts": [
        {
            "matches": ["https://github.com/*"],
            "js":  ["content.js"],
            "css": ["ext_style.css"]
        }
    ],

    "browser_action": {
          "default_icon": {                    // optional
            "16": "images/icon16.png",           // optional
            "48": "images/icon48.png",           // optional
            "128": "images/icon128.png"            // optional
          },
          "default_title": "GitHub Search extension",      // optional; shown in tooltip
          "default_popup": "popup.html"        // optional
        },


    "permissions": [
        "activeTab",
        "storage",
        "https://github.com/*"
    ]

}
