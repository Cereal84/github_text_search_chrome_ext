{
    "manifest_version": 2,

    "name": "GitHub Text Search",
    "short_name":"GH Text",
    "description": "Add a search text bar on current GitHub repo page.",
	"author": "Alessandro Pischedda",

    "version": "0.9.4",

	"icons" : {
		"16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
	},

    "content_scripts": [
        {
            "matches": ["https://github.com/*"],
            "js":  ["content.js"],
            "css": ["ext_style.css"]
        }
    ],


    "permissions": [
        "activeTab",
        "storage",
        "https://github.com/*"
    ]

}
